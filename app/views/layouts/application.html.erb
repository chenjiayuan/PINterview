<!DOCTYPE html>
<html>
<head>
  <title>Pinterview</title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class = "login">
  <% if current_user %>
    <div class="main-page-header">
      <%= link_to(root_path) do %>
        <div id="logo-container">
          <img id = "activity-logo" src="<%= asset_path( 'logo.png' ) %>">
          <div id ="activity-pinterview">PINTERVIEW</div>
        </div>
      <% end %>

      <div id="header-buttons">
<!--         <%= link_to "H O M E", root_path, html_options = {:class => "my-button"} %>
 -->      
        <%= link_to "+ P I N", new_pin_path, html_options = {:class => "my-button"} %>              
        <%= link_to "C O M P A N I E S", companies_path, html_options = {:class => "my-button"} %>
        <%= link_to "P R O F I L E", current_user, html_options = {:class => "my-button"} %>
        <%= link_to "L O G O U T", logout_path, method: "delete", class: "my-button" %>
      </div> 
    </div>
      <div class="spacer">
          &nbsp;
      </div>    
  <% end %>
  <%= yield %>

</body>
</html>
