<!DOCTYPE html>
<html>
<head>
  <title>Welcome to Pinterview</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="mainheader">
      <a href ="/">
        <img id = "logo" src="<%= asset_path( 'logo.png' ) %>">
        <div id ="pinterview">PINTERVIEW</div>
      </a>
  </div>

  <% if current_user %>
    <div class="create"> 
        <a class="my-button"><%= link_to "Home", root_path %></a>       
        <a class="my-button"><%= link_to "New Pin", new_pin_path %></a>
    </div>
    <ul> 
      <a class="my-button"><%= link_to "My Profile", current_user %></a>
      <a class="my-button"><%= link_to "Log out", logout_path, method: "delete" %></a>
    </ul> 
  <% end %>
<%= yield %>
</body>
</html>

