<!DOCTYPE html>
<html>
<head>
  <title>Welcome to Pinterview</title>
  <%= stylesheet_link_tag 'home' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class = "login">
  <% if current_user %>
    <div class="main-page-header">
      <div id="logo-container">
        <img id = "activity-logo" src="<%= asset_path( 'logo.png' ) %>">
        <div id ="activity-pinterview">PINTERVIEW</div>
      </div>
      <div id="header-buttons">
        <%= link_to "Home", root_path, html_options = {:class => "my-button"} %>
        <%= link_to "New Pin", new_pin_path, html_options = {:class => "my-button"} %>
        <%= link_to "My Profile", current_user, html_options = {:class => "my-button"} %>
        <%= link_to "Log out", logout_path, method: "delete", class: "my-button" %>
      </div>      
    </div>
  <% end %>
  <%= yield %>

</body>
</html>
