<div class = "content">
  <div class="individual-pin">
    <% if current_user.favorites.exists?(id: @pin.id) %>
        <%= button_to "Unmark Helpful", favorite_pin_path(@pin, type: "Unmark"), method: :put %>
    <% else %>
        <%= button_to "Mark Helpful",   favorite_pin_path(@pin, type: "Mark"), method: :put %>
    <% end %>  
    <%= image_tag "https://logo.clearbit.com/#{@pin.company.downcase}.com", :class => "individual-logo" %>
    <div class= "title-container-company"><%= @pin.company %></div>
    <div class= "title-container-title"><%= @pin.position %></div>
    <div class= "interview-info-date"> <b>Date Interviewed:</b> <%= @pin.date %></div>
    <div class= "interview-info-type"> <b>Type of Interview:</b> <%= @pin.type_interview %></div>
    <div class= "interview-info-attire"> <b>Offer:</b> <%= @pin.attire %></div>
    <div class= "interview-info-job-type"> <b>Position Type:</b> <%= @pin.position_type %></div>
    <div class= "interview-info-type"> <b>Difficulty:</b> <%= @pin.difficulty %></div>
    <div class= "interview-info-length"> <b>Length:</b> <%= @pin.length %></div>
    <div class= "story-col-question-row-questions"> <b>Interview Process:</b> <%= @pin.questions %></div>
    <div class= "story-col-story-row-description"> <b>Questions Asked:</b> <%= @pin.description %></div>      

    <br>

    <% if current_user == @pin.user%>
     <p>
        <%= button_to 'Edit', edit_pin_path(@pin) %>
        <%= button_to 'Delete', @pin, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
    <% end %>      
  <div class = "individual-backdrop"></div>     
</div>

<div id="back-button-wrapper">
    <%= link_to 'Back', 'javascript:history.go(-1);', class: "back-button" %>
</div>
