<script>
$(document).ready(function() {
    $(".datepicker").pickadate({
      selectYears: true,
      selectMonths: true,
      max: true
    });
});
</script>
<div class="form">
        <%= form_for(@pin) do |f| %>  

         <div class = "error_message"><%= flash[:error] %></div>

          <%= f.text_field :position, :placeholder => "Position" %><br>
          <%= f.text_field :company, :placeholder => "Company" %><br>

          <%= f.label :Type %>
          <%= f.select :position_type, ['full-time', 'part-time', "internship"]%><br>

          <%= f.text_field :date, class: "datepicker", placeholder: "Interview Date" %><br>   

          <%= f.label :Difficulty %>
          <%= f.select :difficulty, ['Very Easy', 'Easy', "Alright", "Hard", "Very Hard"]%><br>      

          <%= f.label :Interview_Type %>
          <%= f.select :type_interview, ['On Site', 'On Campus', "Phone", "Online Assessment"]%><br>

          <%= f.label :Result %>
          <%= f.select :attire, ['Offer', 'Rejected', 'Next Round', 'Unknown']%><br>

          <%= f.text_field :questions, :placeholder => "Discuss Technical Questions" %><br>
          
          <%= f.label :Length %>
          <%= f.select :length, ["Less than 30 Minutes", '30 Minutes', '1 Hour', "1 Hour 30 Minutes", "More than 2 Hour"]%><br>

          <%= f.label :description %><br>
          <%= f.text_field :description, :placeholder => "Solution (Optional)" %><br>
          <%= f.submit "submit", class: "btn-submit" %>
        <% end %>
      </div>
</div>